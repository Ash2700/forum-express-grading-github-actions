<div class="container">
  <div class="row border">
    <div class="col-4 my-2 ">
      <img class="card-img-top img-fluid" src="{{user.image}}" alt="Card image cap" width="300px" height="300px"
        style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    </div>
    <div class="col-8 my-2">
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          Name: {{user.name}}
        </li>
        <li class="list-group-item">
          Email: {{user.email}}
        </li>
        <li class="list-group-item">
          {{count}} 已評論餐廳
        </li>
      </ul>

      <a href="/users/{{user.id}}/edit" class="btn btn-primary my-1"> edit</a>
      <a class="btn btn-outline-secondary my-1" href="javascript:history.back()">Back</a>
    </div>
  </div>
  <div class="row g-2 mt-3">
    <div class="col-5">
      <div class="row bg-secondary" > {{followerCount}}名追蹤者
        <div class="row g-3 mx-0  bg-white ">
            {{#each user.Followers as |followers| }}
            <div class="col-2">
              <div class="card border-0">
                <a href="/restaurants/{{this.id}}" class="text-center">
                  <img src="{{this.image}}" alt="restaurants image" class="img-fluid" width="50px"
                    height="50px">
                </a>
              </div>
            </div>
            {{/each}}
          </div>
      </div>
      <div class="row bg-secondary text-aline-center">{{followingCount}}名追隨者
        <div class="row  mx-0  bg-white ">
            {{#each user.Followings as |followings| }}
            <div class="col-2">
              <div class="card border-0">
                <a href="/restaurants/{{this.id}}" class="text-center">
                  <img src="{{this.image}}" alt="restaurants image" class="img-fluid" width="50px"
                    height="50px">
                </a>
              </div>
            </div>
            {{/each}}
          </div>
      </div>

    </div>
    <div class="col-7">
        <div class="row mx-4  bg-secondary">
          {{count}} 已評論餐廳
          <div class="row g-3 mx-0 bg-white ">
            {{#each comment}}
            <div class="col-2">
              <div class="card border-0">
                <a href="/restaurants/{{this.Restaurant.id}}" class="text-center">
                  <img src="{{this.Restaurant.image}}" alt="restaurants image" class="img-fluid" width="50px"
                    height="50px">
                </a>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
        <div class="row mx-4  bg-secondary">
          <span class="align-baseline">{{favoriteCount}} 已收藏餐廳
          </span>
          <div class="row g-3 m-0  bg-white ">
            {{#each user.FavoritedRestaurants}}
            <div class="col-2">
              <div class="card border-0">
                <a href="/restaurants/{{this.id}}" class="text-center">
                  <img src="{{this.image}}" alt="restaurants image" class="img-fluid" width="50px"
                    height="50px">
                </a>
              </div>
            </div>
            {{/each}}
          </div>
        </div>

    </div>
  </div>
</div>